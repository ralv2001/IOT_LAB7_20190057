<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laboratorio 7 - Cloud Storage"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- BotÃ³n conectar (oculto, solo para funcionalidad interna) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConectar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <!-- Estado de conexiÃ³n (oculto) -->
                <TextView
                    android:id="@+id/tvEstadoConexion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <!-- SecciÃ³n de subida -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¤ SUBIR IMAGEN"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Preview de imagen seleccionada -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivImagenSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_add"
                        android:background="#E0E0E0"
                        android:contentDescription="Imagen seleccionada para subir" />

                </androidx.cardview.widget.CardView>

                <!-- Botones de subida -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeleccionarImagen"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Seleccionar"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#2196F3"
                        android:textColor="#2196F3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubirImagen"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Carga"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:alpha="0.5"
                        app:backgroundTint="#4CAF50" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp" />

                <!-- SecciÃ³n de descarga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¥ DESCARGAR IMAGEN"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Instrucciones de descarga -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haga clic en Descarga para descargar en su galerÃ­a la imagen que fue subida a la nube."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center" />

                <!-- Campo S3 Key (oculto, solo para funcionalidad interna) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etS3Key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- BotÃ³n de descarga -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDescargarImagen"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Descarga"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="#FF9800" />

                <!-- SecciÃ³n imagen descargada -->
                <LinearLayout
                    android:id="@+id/layoutImagenDescargada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imagen descargada:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- Preview de imagen descargada -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImagenDescargada"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivImagenDescargada"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="Imagen descargada desde AWS S3" />

                    </androidx.cardview.widget.CardView>

                    <!-- URL completa -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enlace en la nube:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- Card para URL -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="16dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvUrlCompleta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="URL aparecerÃ¡ aquÃ­..."
                                android:textSize="12sp"
                                android:textColor="#2196F3"
                                android:autoLink="web"
                                android:layout_marginBottom="8dp"
                                android:maxLines="3"
                                android:ellipsize="end" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCopiarUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Copiar URL"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                app:strokeColor="#2196F3"
                                android:textColor="#2196F3"
                                app:icon="@drawable/ic_add"
                                app:iconSize="16dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de informaciÃ³n actualizada -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ InformaciÃ³n"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Selecciona una imagen de tu galerÃ­a\nâ€¢ Presiona 'Carga' para subir a AWS S3\nâ€¢ Presiona 'Descarga' para guardar en tu galerÃ­a\nâ€¢ La imagen aparecerÃ¡ junto con su enlace web"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>